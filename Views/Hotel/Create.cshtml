@model ProjRelMVCDotnetCore.Models.Hotel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>

                <label asp-for="Quarto" class="control-label"></label>
                @Html.DropDownListFor(model => model.Quarto, ViewBag.ListaQuartos as SelectList , new { @class = "form-control" })
                <span asp-validation-for="Quarto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
